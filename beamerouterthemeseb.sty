\newcommand{\singleslide}[1]{{%
    \usebeamerfont{title}
    \begin{frame}[plain,c]
      \begin{center}
        \begin{minipage}[h]{.75\textwidth}
          \centering
          \textcolor{title}{\Large#1}
      \end{minipage}
      \end{center}
    \end{frame}
}}

\newcommand{\chapterslide}[2]{{%
%    \definecolor{bgchapter}{RGB}{210,83,60}
    %\usebeamercolor{block title}
    \setbeamercolor{background canvas}{bg=structure.fg}
    \usebeamerfont{title}
    \begin{frame}[plain]
        \vspace{.6\paperheight}
        \Huge \textcolor{structure.bg}{#1}\vspace*{-0.3cm}
        \hspace*{-0.2cm}\textcolor{white}{\rule{1.\textwidth}{0.025cm}}
        \large \textcolor{structure.bg}{#2}
    \end{frame}
}}
